@(form: Form[models.users.Login],user: models.users.User)
 @main("Login",user) {
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                    @if(form.hasGlobalErrors){
                        <p class="alert alert-info">
                            @form.globalError.message
                         </p>
                    }
                    @helper.form(action = routes.Application.authenticate()){
                        <div class = "form-group">
			<input type="text" name="Login Name" class="form-control input-xs" placeholder="Login Name" value="@form("userID").value">
		</div>
		<div class = "form-group">
			<input type="password" name="password" class="form-control input-xs" placeholder="Password">
		</div>
		
		<div class="form-group">
			<input type="submit" value="Sign In" class="btn btn-primary">
		</div>		
                    }
                </div>
                
            </div>
        </div>
    </div>
</div>
}